
@model VehicleSession
@using Auer.Models;
    <div class="panel mb-3">

        <div >

            <div class="container">
                <h5 class="card-title mt-4">@Model.Vehicle.Year @Model.Vehicle.Make @Model.Vehicle.Model <small>@Model.Vehicle.Trim</small></h5>
            </div>

            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.Vehicle.Image" class="d-block w-100">
                    </div>
                    @if (Model.VehicleFull.Images != null && Model.VehicleFull.Images.Any())
                    {
                        @foreach (string file in Model.VehicleFull.Images)
                        {
                            <div class="carousel-item">
                                <img src="@file" class="d-block w-100">
                            </div>
                        }
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon icon-shadow" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon icon-shadow" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="container">
                <h1 class="mt-5" style="text-align: center;">VEHICLE DETAILS</h1>
                <hr />
                <div class="form-row my-5">

                    @{
                        string col1 = "";
                        string col2 = "";
                        if (Model.VehicleFull.Details != null)
                        {
                            int i = 0;
                            foreach (KVP kvp in Model.VehicleFull.Details)
                            {
                                string item = $"<div><b>{kvp.Name}</b><span>{kvp.Value}<span></div>";
                                if (i % 2 == 0) { col1 += item; }
                                else { col2 += item; }
                                i++;
                            }
                        }
                    }
                    <div class="col-12 col-md-6 info">@Html.Raw(col1)</div>
                    <div class="col-12 col-md-6 info">@Html.Raw(col2)</div>
                </div>
            </div>

            

            
        </div>
    </div>
