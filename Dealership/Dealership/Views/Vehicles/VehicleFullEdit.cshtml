
@model VehicleFull
@using Auer.Models;



<input hidden readonly asp-for="VIN" />
<div class="card bg-light mb-3 w-100">
    <div class="card-header d-flex">
        <h5 class="mb-0 mr-1"><i class="fal fa-car fa-fw mr-3"></i>Vehicle Details</h5>
    </div>
    <div class="card-body">

        <div class="col-4 form-group">
            <input id="ImgUpload" type="file" multiple="multiple" />
        </div>

        <div class="col-12 form-group">
            <label class="control-label">Add Detail</label>
            <div class="form-row">
                <input id="detailName" type="text" class="form-control" />
                <input id="detailValue" type="text" class="form-control" />
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="button" onclick="AddDetail();">Add</button>
                </div>
            </div>
        </div>
        <div id="Details">

            @{
                if (Model.Details != null)
                {
                    int i = 0;
                    foreach (KVP kvp in Model.Details)
                    {
                        <div id="Detail_@i" class="w-100 list-group-item d-flex justify-content-between align-items-center">
                            <input asp-for="Details[i].Name" type="text" class="form-control" />
                            <input asp-for="Details[i].Value" type="text" class="form-control" />
                            <button type="button" value="@i" onclick="$('#Detail_@i').remove()" class="btn btn-outline-danger ml-3">Remove</button>
                        </div>
                        i++;
                    }
                }
            }
        </div>

    </div>
    <div class="card-footer d-flex justify-content-between">
        <input class="btn btn-primary float-right" type="submit" value="< Edit Brief" formaction="VehicleFullBack" />
        <input class="btn btn-primary float-right" type="submit" value="Finish & Save" />
    </div>
</div>

